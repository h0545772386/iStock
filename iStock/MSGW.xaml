<mah:MetroWindow x:Class="iStock.MSGW"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 xmlns:local="clr-namespace:iStock"
                 mc:Ignorable="d"
                 Title="iStock"
                 Height="264"
                 Width="400"
                 FlowDirection="RightToLeft"
                 WindowStartupLocation="CenterScreen"
                 ContentRendered="MetroWindow_ContentRendered">
    <mah:MetroWindow.Background>
        <LinearGradientBrush EndPoint="0.5,1"
                             StartPoint="0.5,0">
            <GradientStop Color="Black"
                          Offset="0" />
            <GradientStop Color="#FA76899E" />
        </LinearGradientBrush>
    </mah:MetroWindow.Background>
    <Grid Margin="3">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <RichTextBox Name="rtbText"
                     Grid.Row="0"
                     Margin="3"
                     Background="Transparent" />
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    HorizontalAlignment="Center">
            <Button Name="bOK"
                    Margin="3"
                    HorizontalAlignment="Left"
                    Click="BOK_Click"
                    Content="אישור"
                    FontSize="14"
                    Height="40"
                    Width="140"
                    FontWeight="Medium"
                    BorderBrush="Black"
                    BorderThickness="1.64" />
            <Button Name="bCancel"
                    Margin="3"
                    HorizontalAlignment="Left"
                    Click="BCancel_Click"
                    Content="ביטול"
                    FontSize="14"
                    Height="40"
                    Width="140"
                    FontWeight="Medium"
                    BorderBrush="Black"
                    BorderThickness="1.64" 
                    Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
