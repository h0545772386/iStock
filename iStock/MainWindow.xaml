<mah:MetroWindow x:Class="iStock.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 xmlns:local="clr-namespace:iStock"
                 mc:Ignorable="d"
                 Title="iStock"
                 Icon="Images/2.256x256 transparent.ico"
                 Height="450"
                 Width="900"
                 FlowDirection="RightToLeft"
                 WindowState="Maximized"
                 WindowStyle="ThreeDBorderWindow"
                 WindowStartupLocation="CenterScreen"
                 ContentRendered="MetroWindow_ContentRendered">
    <mah:MetroWindow.Background>
        <LinearGradientBrush EndPoint="0.5,1"
                             StartPoint="0.5,0">
            <GradientStop Color="Black"
                          Offset="0" />
            <GradientStop Color="#FA76899E" />
        </LinearGradientBrush>
    </mah:MetroWindow.Background>
    <Window.Resources>
        <local:Fonts x:Key="FntSize" />
    </Window.Resources>
    <Grid Margin="3">
        <Grid.Resources>
            <Style TargetType="DataGridCell">
                <Style.Triggers>
                    <Trigger Property="DataGridCell.IsSelected"
                             Value="True">
                        <Setter Property="Background"
                                Value="LightSeaGreen" />
                    </Trigger>
                    <Trigger Property="DataGridCell.IsSelected"
                             Value="True">
                        <Setter Property="Foreground"
                                Value="Black" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="חיפוש"
                       Grid.Row="0"
                       Grid.Column="0"
                       Margin="3"
                       VerticalAlignment="Center" />
            <TextBox Name="tbSearch"
                     Grid.Row="0"
                     Grid.Column="1"
                     Width="300"
                     Margin="3"
                     BorderBrush="Black"
                     BorderThickness="1.64"
                     HorizontalAlignment="Left"
                     TextChanged="TbSearch_TextChanged" />
            <TextBlock Text="כלול לא פעילים"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="3"
                       Grid.Row="1"
                       Grid.Column="0" />
            <CheckBox Name="cbAll"
                      Grid.Column="1"
                      Grid.Row="1"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      Width="300"
                      FontSize="16"
                      Margin="3"
                      BorderBrush="Black"
                      BorderThickness="1.64"
                      Checked="cbAll_Checked"
                      Unchecked="cbAll_Unchecked" />
            <StackPanel Orientation="Horizontal"
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="2">
                <Button Name="bAddMaterial"
                        BorderBrush="Black"
                        BorderThickness="1.64"
                        Click="BAddMaterial_Click"
                        Width="114">
                    <Button.ToolTip>
                        <TextBlock Text="הוסף חומר חדש" />
                    </Button.ToolTip>
                    <TextBlock Text="חומר חדש"
                               FontSize="14"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Button>
                <Button Name="bAddTranz"
                        BorderBrush="Black"
                        BorderThickness="1.64"
                        Click="BAddTranz_Click"
                        Width="114">
                    <Button.ToolTip>
                        <TextBlock Text="הצג תנועות חומרים" />
                    </Button.ToolTip>
                    <TextBlock Text="תנועוה"
                               FontSize="14"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Button>
                <Button Name="bTranzs"
                        BorderBrush="Black"
                        BorderThickness="1.64"
                        Click="BTranzs_Click"
                        Width="114">
                    <Button.ToolTip>
                        <TextBlock Text="הצג תנועות חומרים" />
                    </Button.ToolTip>
                    <TextBlock Text="הצג תנועות"
                               FontSize="14"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Button>
                <Button Name="bReports"
                        BorderBrush="Black"
                        BorderThickness="1.64"
                        Click="bReports_Click"
                        Width="114">
                    <Button.ToolTip>
                        <TextBlock Text="דוחות" />
                    </Button.ToolTip>
                    <TextBlock Text="דוחות"
                               FontSize="14"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Button>
                <Button Name="bLoadCSV"
                        BorderBrush="Black"
                        BorderThickness="1.64"
                        Click="BLoadCSV_Click"
                        Width="164"
                        Visibility="Collapsed">
                    <Button.ToolTip>
                        <TextBlock Text="טעינת תנועות מקובץ" />
                    </Button.ToolTip>

                    <TextBlock Text="טעינה מקבוץ"
                               FontSize="14"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Button>
            </StackPanel>
        </Grid>
        <GroupBox Name="GBMaterials"
                  Margin="0 8 0 0"
                  Grid.Row="2"
                  HeaderStringFormat="נמצאו {0} רשומות"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
            <DataGrid x:Name="DGMaterials"
                      Margin="3 8 3 8"
                      AutoGenerateColumns="False"
                      Background="Transparent"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserResizeRows="False"
                      IsReadOnly="True"
                      MouseDoubleClick="DGMaterials_MouseDoubleClick"
                      SelectionMode="Single"
                      ItemsSource="{Binding}"
                      AlternatingRowBackground="AliceBlue"
                      FontSize="{Binding Source={StaticResource FntSize}, Path=GridFont}"
                      FontWeight="Medium"
                      GridLinesVisibility="All"
                      EnableRowVirtualization="True"
                      EnableColumnVirtualization="True"
                      VirtualizingPanel.IsVirtualizing="False"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      ScrollViewer.CanContentScroll="True">
                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Status}"
                                         Value="סגור">
                                <Setter Property="Foreground"
                                        Value="Tomato" />
                            </DataTrigger>
                            <Trigger Property="DataGridCell.IsSelected"
                                     Value="True">
                                <Setter Property="Foreground"
                                        Value="Black" />
                            </Trigger>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="LightGoldenrodYellow" />
                            </Trigger>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Foreground"
                                        Value="Black" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridHyperlinkColumn Width="Auto"
                                             Binding="{Binding Path=MatId}"
                                             Header="מזהה חומר">
                        <DataGridHyperlinkColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <EventSetter Event="Hyperlink.Click"
                                             Handler="OnHyperlinkClick" />
                            </Style>
                        </DataGridHyperlinkColumn.ElementStyle>
                    </DataGridHyperlinkColumn>
                    <DataGridTextColumn Width="Auto"
                                        Binding="{Binding Path=BrCode1}"
                                        Header="ברקוד" />
                    <DataGridTextColumn Width="Auto"
                                        Binding="{Binding Path=Name1}"
                                        Header="תאור חומר" />
                    <DataGridTextColumn Width="Auto"
                                        Binding="{Binding Path=MinQTY}"
                                        Header="כמות מינ'" />
                    <DataGridTextColumn Width="Auto"
                                        Binding="{Binding Path=MaxQTY}"
                                        Header="כמות מקס'" />
                    <DataGridTextColumn Width="Auto"
                                        Binding="{Binding Path=TotalQTY}"
                                        Header="מלאי" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

    </Grid>
</mah:MetroWindow>
